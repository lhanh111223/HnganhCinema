@model HnganhCinema.ViewModels.MovieViewModels.CreateMovieViewModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <style type="text/css">
        #preview-image {
            height: 25rem;
            width: 25rem;
        }
    </style>
</head>
<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form-create" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <span asp-validation-for="MovieName" class="text-danger"></span>
                <input onchange="loadPreviewInfo()" asp-for="MovieName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea id="summernote" asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <span asp-validation-for="Type" class="text-danger"></span>
                @Html.DropDownListFor(m => m.Type, (IEnumerable<SelectListItem>)ViewBag.typeList, "Select Movie Type", new {@class = "form-control"})
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input id="file-image" asp-for="@Model.Image" class="form-control" onchange="uploadFileImage()" />
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <span asp-validation-for="Time" class="text-danger"></span>
                <input asp-for="Time" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                <input asp-for="ReleaseDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <span asp-validation-for="EndDate" class="text-danger"></span>
                <input asp-for="EndDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <span asp-validation-for="Status" class="text-danger"></span>
                @Html.DropDownListFor(m => m.Status, (IEnumerable<SelectListItem>)ViewBag.statusList, "Select Movie Status", new {@class = "form-control"})
            </div>
            <div style="margin-top: 2rem" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="row col-md-8">
        <div class="col-md-6">
            <img style="display: none;" id="preview-image" src="#" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Code JS *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('file-image').addEventListener('change', function () {
                displayPreviewImage(this);
            });
        });

        function displayPreviewImage(input) {
            let previewImage = document.getElementById('preview-image');
            let file = input.files[0];

            if (file) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function loadPreviewInfo(){

        }
    </script>

}
