@using Microsoft.AspNetCore.Identity
@using HnganhCinema.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li style="margin-right: 2vh" class="nav-item">
                <a class="btn btn-outline-success text-dark" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">Hello, @UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-outline-info navbar-btn text-dark">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li style="margin-right: 3vh" class="nav-item">
            <a class=" btn btn-outline-info  text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-info text-dark" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}