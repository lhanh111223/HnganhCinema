@model List<RoleModel>
@{
    ViewData["Title"] = "LIST OF ROLES";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage"></partial>


<div class="mb-2">
    <a class="btn btn-secondary" asp-action="Create">Create a new Role</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Manage Members</a>
</div>

<table class="table">
    <tr>
        <th>Role</th>
        <th>Action</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>
                <p>@role.Name</p>
                @foreach (var claim in @role.Claims)
                {
                    <small>@claim</small><br>
                }
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-roleid="@role.Id">Update</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-roleid="@role.Id">Delete</a>
            </td>
        </tr>
    }
</table>
