@model AddFeatureViewModel
@using HnganhCinema.Areas.Database.Models;
@using Microsoft.EntityFrameworkCore;

@inject CinemaDbContext dbContext

@{
    ViewData["Title"] = "Add Feature";
}

<h1>@ViewData["Title"]</h1>

<hr />
<partial name="_StatusMessage"></partial>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2><label asp-for="Feature" class="control-label"></label></h2>
    <span asp-validation-for="Feature" class="text-danger"></span>
    <input asp-for="Feature" class="form-control" />

    <hr />
    <h4>Actions can access</h4>
    <input type="checkbox" asp-for="CanView" /> View
    <input style="margin-left:2rem" type="checkbox" asp-for="CanCreate" /> Create
    <input style="margin-left:2rem" type="checkbox" asp-for="CanUpdate" /> Update
    <input style="margin-left:2rem" type="checkbox" asp-for="CanDelete" /> Delete
    <input style="margin-left:2rem" type="checkbox" asp-for="CanBlock" /> Block
    <hr />
    <br />
    <button style="margin-top: 1rem" class="btn btn-success" type="submit">Add</button>

</form>
<hr />
<a asp-action="IndexFeature" asp-controller="DbManage" asp-area="Database">Return</a>






